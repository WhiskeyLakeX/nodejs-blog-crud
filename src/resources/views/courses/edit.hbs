<div class="mt-4">
  <h3>Edit this course</h3>
  <form method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3 form-group">
      <label for="name" class="form-label">Name</label>
      <input
        class="form-control"
        id="name"
        aria-describedby="emailHelp"
        name="name"
        value="{{course.name}}"
      />
    </div>
    <div class="mb-3 form-group">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="description"
        aria-describedby="emailHelp"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <div class="mb-3 form-group">
      <label for="videoId" class="form-label">Video ID</label>
      <input
        class="form-control"
        id="videoId"
        aria-describedby="emailHelp"
        name="videoId"
        value="{{course.videoId}}"
      />
    </div>
    <div class="mb-3 form-group">
      <label for="level" class="form-label">Level</label>
      <input
        class="form-control"
        id="level"
        aria-describedby="emailHelp"
        name="level"
        value="{{course.level}}"
      />
    </div>
